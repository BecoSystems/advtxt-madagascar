algoritmo madagascar;

variáveis
    objetoEscolhido: inteiro;
    verboEscolhido: inteiro;
fim-variáveis

início
    imprima("Em um belo dia ensolarado você está caminhando quando de repente dá de cara com o leão Alex furioso, o que você utiliza para tentar fugir dele \n 1-Queijo mofado \n 2-Bolha d'agua\n");
    objetoEscolhido:= leia();

    se (objetoEscolhido <> 2) então
        imprima("Você desnorteou Alex. Você deseja 1-fugir ou 2-lutar: \n");
        verboEscolhido:= leia();

        se (verboEscolhido <> 2) então
            imprima("Você conseguiu fugir e está vivo\n");

        senão
            imprima("Alex chama reforços e todos lutam contra você. Você morreu");
        fim-se

    senão
        imprima("Alex suportou a bolha d'água e correu atrás de você. Você morreu\n");
    fim-se
fim
